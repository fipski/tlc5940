/dts-v1/;
/plugin/;

/ {
    compatible = "ti,beaglebone", "ti,beaglebone-black", "ti,beaglebone-green";

    /* identification */
    part-number = "BB-TLC5940-01";
    version = "00A0";

    /* state the resources this cape uses */
    exclusive-use =
        /* the pin header uses */
        "P9.17",	/* spi0_cs0 */
        "P9.18",	/* spi0_d1 */
        "P9.21",	/* spi0_d0 */
        "P9.22",	/* spi0_sclk */
        "P9.24",    /* xlat */
        "P9.27",	/* blank */
        "P9.28",    /* pwms */
        /* the hardware ip uses */
        "gpio0_15",
        "gpio3_19",
        "spi0",
        "ecap2";
    fragment@0 {
        target = <&am33xx_pinmux>;
        __overlay__ {
            /* default state has all gpios released and mode set to uart1 */
bb_spi0_pins: pinmux_bb_spi0_pins {
                  pinctrl-single,pins = <
                      0x150 0x30	/* P9_22 spi0_sclk.spi0_sclk,		INPUT_PULLUP | MODE0 */
                      0x154 0x30	/* P9_21 spi0_d0.spi0_d0,		INPUT_PULLUP | MODE0 */
                      0x158 0x10	/* P9_18 spi0_d1.spi0_d1,		OUTPUT_PULLUP | MODE0 */
                      0x15c 0x10	/* P9_17 spi0_cs0.spi0_cs0,		OUTPUT_PULLUP | MODE0 */
                      /* 0x158 0x00 */	/* P9_18 spi0_d1.spi0_d1,		OUTPUT_NO_PULLUP | MODE0 */
                      /* 0x15c 0x00	*/ /* P9_17 spi0_cs0.spi0_cs0,		OUTPUT_NO_PULLUP | MODE0 */
                      >;
              };
bb_latch_pins: pinmux_bb_latch_pins {
                   pinctrl-single,pins = <
                       /*	0x1ac 0x37	 P9_25 mcasp0_ahclkx.gpio3_21,	RX_ENABLED | PULLUP | MODE7 */
                       /*	0x1a4 0x37	 P9_27 mcasp0_fsr.gpio3_19		RX_ENABLED | PULLUP | MODE7 */
                       0x184 0x17   /* P9_24 Output Pullup Mode7*/
                       0x1a4 0x17	/* P9_27 Output Pullup Mode7*/

                       >;
               };

ecap2_pins_default: pinmux_ecap2_pins_default {
                        pinctrl-single,pins = <
                            0x19c 0x4/* P9_28 mcasp0_ahclkr.ecap2_in_pwm2_out MODE4 */
                            >;
                    };

ecap2_pins_sleep: pinmux_ecap2_pins_sleep {
                      pinctrl-single,pins = <
                          0x19c 0x2f/* P9_28 mcasp0_ahclkr.ecap2_in_pwm2_out */
                          >;
                  };
        };
    };

	fragment@1 {
		target = <&epwmss2>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@2 {
		target = <&ehrpwm2>;
		__overlay__ {
			status = "okay";
		};
	};

    fragment@3 {
        target = <&ecap2>;
        __overlay__ {
            status = "okay";
            pinctrl-names = "default", "sleep";
            pinctrl-0 = <&ecap2_pins_default>;
            pinctrl-1 = <&ecap2_pins_sleep>;
        };
    };

    fragment@4 {
        target = <&spi0>;
        __overlay__ {
#address-cells = <1>;
#size-cells = <0>;

            status = "okay";
            pinctrl-names = "default";
            pinctrl-0 = <&bb_spi0_pins>;
            /*ti,pio-mode;*/ /* disable dma when used as an overlay, dma gets stuck at 160 bits... */

            tlc5940@0 {
#address-cells = <1>;
#size-cells = <0>;

                compatible = "ti,tlc5940";
                pinctrl-names = "tlc5940-xlat";
                pinctrl-0 = <&bb_latch_pins>;
                chain-sz-max = <128>;
                gpio-xlat = <&gpio0 15 1>; /* P9_24 */
                gpio-blank = <&gpio3 19 1>; /* P9_27 */
                pwms = <&ecap2 0 50000 0>; /* P9_28, name must be pwms */
                reg = <0>;
                spi-max-frequency = <10000000>;
                spi-cpha=<1>;
                spi-cpol=<0>;
            };
        };
    };
};
